{
  "env": {
    "browser": true,
    "es2020": true
  },
  "overrides": [
    {
      "extends": ["plugin:json/recommended"],
      "files": ["*.json"]
    },
    {
      "extends": ["next/core-web-vitals", "prettier"],
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"]
    }
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "groups": ["external", "parent", "sibling"],
        "newlines-between": "always"
      }
    ]
  }
}
